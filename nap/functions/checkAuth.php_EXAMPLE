<?php
$headers = [];

foreach($_SERVER as $k => $v)
    if(substr($k, 0, 5)== 'HTTP_')
    $headers[str_replace('HTTP_', '', $k)] = $v;
    
//check auth
$auth = $appConfig['auth'];

if(empty($headers['AUTH'])||($headers['AUTH'] != sha1(implode(':', $auth))))
    throw new Exception('auth header not present or invalid', Nap\Response::WARNING_TYPE_UNAUTHORIZED);
    
unset($auth);
