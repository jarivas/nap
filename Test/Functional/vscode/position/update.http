    "action": "update",
    "parameters": {
        "token": "{{token}}",
        "company": "Micro-soft",
        "name": "Web Developer",
        "location": "Vancouver",
        "description": "Bla description bla",
        "startDate": "1999-01-01 00:00:00",
        "endDate": "2019-01-01 00:00:00"
    }
}
