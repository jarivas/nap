###
# @name login
POST {{url}} HTTP/1.1

{
    "module": "user",
    "action": "login",
    "parameters": {
        "username": "{{username}}",
        "password": "{{password}}"
    }
}

###
@token = {{login.response.body.token}}

###
# @name create
POST {{url}} HTTP/1.1

{
    "module": "language",
    "action": "update",
    "parameters": {
        "name": "Daedric",
        "level": "Skyrim"
    }
}
###
# @name update
POST {{url}} HTTP/1.1

{
    "module": "language",
    "action": "update",
    "parameters": {
        "token": "{{token}}",
        "name": "Daedric+",
        "level": "Skyrim",
        "_id": 1
    }
}

###
# @name get
POST {{url}} HTTP/1.1

{
    "module": "language",
    "action": "read",
    "parameters": {
        "token": "{{token}}"
    }
}
